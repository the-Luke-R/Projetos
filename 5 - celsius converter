print("Type the temperature in Celsius:")
celsius = input()
print(type(celsius))

def convertTemperature(celsius):
    print("Kelvin:", celsius + 273.15, "Fahrenheit:", celsius * 1.80 + 32.00)

if isinstance(celsius, str):
    if celsius.isnumeric() or float:
        celsius = float(celsius)
        convertTemperature(celsius)
    else:
        if celsius == "": # de acordo com youtube celsius is None Ã© melhor
            print("insert a value")
        else:
            print("insert a numeric value")
